.clock {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #333;
    width: 200px;
    padding: 10px;
    text-align: center;
    border-radius: 10px;
}

.clock-time,
.clock-ampm{
    font-family: sans-serif;
    font-size: 30px;
    color: #fff;
}

.clock-time {
    font-size: 48px;
}